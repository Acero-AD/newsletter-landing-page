---
interface Props {
  icon: string;
  title: string;
  description: string;
  iconColor: string;
}

const { icon, title, description, iconColor } = Astro.props;
---

<div class="flex flex-col items-center text-center">
  <i data-lucide={icon} class={`w-12 h-12 mb-4 ${iconColor}`}></i>
  <h3 class="text-xl font-bold mb-2">{title}</h3>
  <p class="text-purple-100">{description}</p>
</div>
