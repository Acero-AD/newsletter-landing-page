---
// SubscribeForm.astro
// No server-side logic required here.
---

<form id="subscribe-form" class="flex flex-col space-y-2">
  <input type="email" id="email" placeholder="Solo quiero tu email, el telefono en otro momento" required
    class="w-full px-3 py-2 bg-white/10 border border-white/20 rounded-md placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-white/50" />
  <button type="submit"
    class="w-full px-3 py-2 bg-white text-primary font-bold rounded-md hover:bg-purple-100 transition-colors">
    Impulsate
  </button>
</form>

<div id="snackbar" class="hidden fixed top-5 left-1/2 transform -translate-x-1/2 min-w-[250px] p-4 rounded-md text-white text-center opacity-0 transition-opacity duration-300">
</div>

<script src="./subscribeForm.ts"></script>
